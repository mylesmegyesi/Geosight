<h1>Listing sights</h1>

<table>
  <tr>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Name</th>
    <th>Radius</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sights.each do |sight| %>
  <tr>
    <td><%= sight.latitude %></td>
    <td><%= sight.longitude %></td>
    <td><%= sight.name %></td>
    <td><%= sight.radius %></td>
    <td><%= link_to 'Show', sight %></td>
    <td><%= link_to 'Edit', edit_sight_path(sight) %></td>
    <td><%= link_to 'Destroy', sight, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Sight', new_sight_path %> |
