<% content_for :css do %>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=yes" />
    <%= stylesheet_link_tag("map") %>
    <%= stylesheet_link_tag "sights" %>
<% end %>

<% content_for :javascript do %>
    <%= javascript_include_tag("https://maps-api-ssl.google.com/maps/api/js?sensor=false") %>
<% end %>

<% content_for :body do %>

    <script type="text/javascript">
    
        var lastOpened = null; // the last infowindow opened
        var geocoder = new google.maps.Geocoder();
        var champaign = new google.maps.LatLng(40.114044, -88.22485);
        var map;

        // adds sight markers to the map
        function add_marker(map, lat, lng, rad, title, contentString) { 
            var latlng = new google.maps.LatLng(lat, lng);
            
            var marker = new google.maps.Marker({
                position: latlng,
                title: title,
                map: map
            });
		  
            marker.infowindow = new google.maps.InfoWindow({
                content: contentString,
                maxWidth: 200
            });
    
            // makes clicking on a marker popup the infowindow associated with it
            google.maps.event.addListener(marker, 'click', function() {
                if(lastOpened != null) lastOpened.infowindow.close();
                marker.infowindow.open(map,marker);
                lastOpened = marker;
            });  
        }
        
        $(document).ready(function() {
            
            // set the center to Champaign, IL
            map = new google.maps.Map(document.getElementById("map-canvas"), {
                zoom: 3,
                center: champaign, 
                mapTypeId: google.maps.MapTypeId.ROADMAP
            });
            
            // Add markers for sights
            <% if @sights.length != 0 %>            
            var contentString;
            <% @sights.each do |sight| %>
            contentString = null;
            <% if sight.photos.length != 0 %>
            contentString = 
                '<b><%= sight.name %></b>' +
                '<div id="infoWindowDiv">' +
                  '<%= link_to(image_tag(sight.photos[0].file.url(:thumb)), sight_path(sight)) %>' +
                '</div>';
			<% else %>
			contentString = 
                '<b><%= sight.name %></b>' +
                '<div id="infoWindowDiv">' +
					'<%= link_to("No Photos Yet", sight_path(sight)) %>' +
                '</div>';
            <% end %>
            add_marker(map, <%= sight.latitude %>, <%= sight.longitude %>, <%= sight.radius %>,
                "<%= sight.name %>", contentString);
            var circle = new google.maps.Circle({
                radius: <%= sight.radius %>,
                center: new google.maps.LatLng(<%= sight.latitude %>, <%= sight.longitude %>),
                map: map,
                strokeWeight: 1
            });
            <% end %>
            <% end %>
            
            // Set up the search box
            $("#jump-submit").click(function() {
                var query = $("#jump-to").val();
                if (query == "") {
                    return;
                }
                
                $("#spinner").show();
                geocoder.geocode({"address": query}, function(results, status) {
                    $("#spinner").hide();
                    if (status == google.maps.GeocoderStatus.OK) {
                        var location = results[0].geometry.location;
                        map.setCenter(location);
                        map.setZoom(15);
                    } else {
                        alert("Could not find the given location");
                    }
                });
            });
        });
    </script>
    
    <div id="jump-to-box">
        <label>Jump to</label>
        <input id="jump-to" size="40" type="text">
        <input id="jump-submit" type="submit" value="Go">
        <img id="spinner" src="/images/spinner.gif" />
    </div>
    <div id="map-canvas"></div>

<% end %>
