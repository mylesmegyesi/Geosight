<%= form_for @photo do |f| %>

    <% if @photo.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>
            
            <ul>
                <% @photo.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
    </div>
    <div class="field">
        <%= f.label :radius %><br />
        <%= f.text_field :radius %>
    </div>
    <div class="field">
        <%= f.label :possible_sights %><br />
        <%
            @possible_sights = Sight.possible_sights(@photo.latitude, 
                @photo.longitude).map { |sight| [sight.name, sight.id] }
            @possible_sights.unshift(["", 0])
        %>
        <%= f.select(:existing_sight_id, options_for_select(@possible_sights)) %>
    </div> 
    <div class="actions">
        <%= submit_tag "Submit" %>
    </div>
    
<% end %>
