<h1>Listing photos</h1>

<table>
  <tr>
    <th>Pic filename</th>
    <th>Pic content type</th>
    <th>Pic file size</th>
    <th>Pic updated at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= photo.pic_filename %></td>
    <td><%= photo.pic_content_type %></td>
    <td><%= photo.pic_file_size %></td>
    <td><%= photo.pic_updated_at %></td>
    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

