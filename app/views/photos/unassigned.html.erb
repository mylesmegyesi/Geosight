<% content_for :body do %>

    <h1>Unassigned Photos</h1>
    
    <table>
        <tr>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        
        <% @photos.each do |photo| %>
        <tr>
            <td><%= image_tag(photo.file.url(:thumb)) %></td>
            <td><%= link_to 'Show', photo_path(photo) %></td>
            <td><%= link_to 'Destroy', photo_path(photo), :confirm => 'Are you sure?', :method => :delete %></td>
        </tr>
        <% end %>
    </table>
    <br />
        
    <%= link_to 'Upload a Photo', new_photo_path %>
    
<% end %>
