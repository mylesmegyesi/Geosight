<%= form_for(@tag) do |f| %>
    <% if @tag.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@tag.errors.count, "error") %> prohibited this tag from being saved:</h2>
    
            <ul>
                <% @photo_tag.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <%= f.hidden_field(:user_id, {:value => current_user.id}) %>
