<%= form_for(@tag) do |f| %>
    <% if @tag.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@tag.errors.count, "error") %> prohibited this tag from being saved:</h2>
    
            <ul>
                <% @photo_tag.errors.full_messages.each do |msg| %>
                    <li><span class="attr"><%= attr %></span> <%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <%= f.hidden_field(:user_id, {:value => current_user.id}) %>
    <%=
        if not @photo.nil?
            hidden_field_tag(:photo_id, @photo.id)
        elsif not @sight.nil?
            hidden_field_tag(:sight_id, @sight.id)
        end
    %>
    <div class="field" style="float: left;">
        <%= f.text_field :tag %>
    </div>
    <div class="actions">
        <%= f.submit(:value => "Add Tag") %>
    </div>
<% end %>
